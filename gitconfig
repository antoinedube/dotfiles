    co = checkout

[diff]
    tool = difft

[difftool]
    prompt = false

[difftool "difft"]
    cmd = /usr/bin/difft --color=always --skip-unchanged $LOCAL $REMOTE

[init]
    defaultBranch = main

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
