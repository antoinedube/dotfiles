[pull]
    rebase = true

[push]
    default = simple
    followTags = true

[merge]
    conflictStyle = diff3
    ff = no

[status]
    showUntrackedFiles = all

[transfer]
    fsckobjects = true

[log]
    date = relative

[format]
    pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(14,trunc)%ad %C(auto,green)%<(13,trunc)%aN%C(auto,red)%gD% D %C(auto,reset)%s

[alias]
    ll = log --graph -n 35
    dt = difftool

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = /usr/bin/icdiff --line-numbers $LOCAL $REMOTE

