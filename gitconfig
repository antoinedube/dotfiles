[log]
    date = relative

[format]
    pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%>(14,trunc)%ad %C(auto,green)%<(13,trunc)%aN%C(auto,red)%gD% D %C(auto,reset)%s

